{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.ezto.ai",
  "productName": "EZTO Ai",
  "npmRebuild": false,
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "public/favicon.ico"
  ],
  "extraResources": [
    {
      "from": "build/tessdata",
      "to": "tessdata",
      "filter": ["**/*"]
    }
  ],
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "fileAssociations": [
      {
        "ext": "ezto",
        "name": "EZTO Project File",
        "description": "EZTO Ai Takeoff Project",
        "icon": "build/icon-1024.png",
        "role": "Editor"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": false,
    "createStartMenuShortcut": true,
    "perMachine": false,
    "license": "build/installer-license.txt",
    "include": "build/installer.nsh"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "GBE-Media",
      "repo": "EZTOAiDesktop-v1.0.0",
      "releaseType": "release"
    }
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.icns",
    "category": "public.app-category.productivity",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "fileAssociations": [
      {
        "ext": "ezto",
        "name": "EZTO Project File",
        "description": "EZTO Ai Takeoff Project",
        "icon": "build/icon.icns",
        "role": "Editor"
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico",
    "category": "Office",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "fileAssociations": [
      {
        "ext": "ezto",
        "name": "EZTO Project File",
        "description": "EZTO Ai Takeoff Project",
        "mimeType": "application/x-ezto"
      }
    ]
  }
}
